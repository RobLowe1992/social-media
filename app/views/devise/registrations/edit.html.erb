<main class="container">
<%= form_for(resource, as: resource_name, class: 'form-group', url: registration_path(resource_name), html: { multipart: true, method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :first_Name, class: 'form-control' %><br />
    <%= f.text_field :first_name, autofocus: true, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :last_Name, class: 'form-control' %><br />
    <%= f.text_field :last_name, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :image, class: 'form-control' %><br />
    <%= f.file_field :image, class: 'form-control' %>
  </div>


    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, class: 'form-control' %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_Confirmation, class: 'form-control' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :current_Password, class: 'form-control' %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off", class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger' %></p>

<%= link_to "Back", :back, class: 'btn btn-primary' %>
</main>
